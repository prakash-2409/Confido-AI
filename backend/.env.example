# ================================================================
# CareerAI - Environment Configuration
# ================================================================
# Copy this file to .env and fill in the values.
# Required variables are marked with [REQUIRED].
# ================================================================

# ----------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------
NODE_ENV=development                    # [REQUIRED] development | production | test
PORT=5000                               # [REQUIRED] Backend server port
API_VERSION=v1                          # API version prefix

# ----------------------------------------------------------------
# Database (MongoDB)
# ----------------------------------------------------------------
MONGODB_URI=mongodb://localhost:27017/career-ai-saas  # [REQUIRED] MongoDB connection string
DB_NAME=career-ai-saas                  # Database name

# ----------------------------------------------------------------
# JWT Authentication
# ----------------------------------------------------------------
JWT_ACCESS_SECRET=your-access-secret-key-min-32-chars    # [REQUIRED] Access token secret
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars  # [REQUIRED] Refresh token secret
JWT_ACCESS_EXPIRES_IN=15m               # Access token expiry
JWT_REFRESH_EXPIRES_IN=7d               # Refresh token expiry

# ----------------------------------------------------------------
# CORS Configuration
# ----------------------------------------------------------------
CORS_ORIGIN=http://localhost:3000       # Allowed origins (comma-separated)

# ----------------------------------------------------------------
# ML Service
# ----------------------------------------------------------------
ML_SERVICE_URL=http://localhost:8000    # Python ML service URL

# ----------------------------------------------------------------
# File Upload
# ----------------------------------------------------------------
MAX_FILE_SIZE=5242880                   # Max upload size in bytes (5MB)
UPLOAD_PATH=./uploads                   # Upload directory

# ----------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000             # Rate limit window (15 minutes)
RATE_LIMIT_MAX_REQUESTS=100             # Max requests per window

# ----------------------------------------------------------------
# Logging
# ----------------------------------------------------------------
LOG_LEVEL=info                          # error | warn | info | debug

# ----------------------------------------------------------------
# Email Service
# ----------------------------------------------------------------
EMAIL_PROVIDER=smtp                     # smtp | sendgrid | ses
SMTP_HOST=smtp.mailtrap.io              # SMTP host
SMTP_PORT=587                           # SMTP port
SMTP_SECURE=false                       # Use TLS
SMTP_USER=                              # SMTP username
SMTP_PASS=                              # SMTP password
# SENDGRID_API_KEY=                     # SendGrid API key (if provider=sendgrid)
EMAIL_FROM_ADDRESS=noreply@careerai.com # Sender email
EMAIL_FROM_NAME=CareerAI               # Sender name
FRONTEND_URL=http://localhost:3000      # Frontend URL (for email links)

# ----------------------------------------------------------------
# Stripe Payments
# ----------------------------------------------------------------
STRIPE_SECRET_KEY=                      # Stripe secret key (sk_test_...)
STRIPE_WEBHOOK_SECRET=                  # Stripe webhook secret (whsec_...)
STRIPE_PRO_PRICE_ID=                    # Pro plan Price ID
STRIPE_ENTERPRISE_PRICE_ID=            # Enterprise plan Price ID

# ----------------------------------------------------------------
# LLM / AI Service
# ----------------------------------------------------------------
LLM_PROVIDER=openai                     # openai | gemini
OPENAI_API_KEY=                         # OpenAI API key
GEMINI_API_KEY=                         # Google Gemini API key
LLM_MODEL=gpt-4o-mini                  # Model name

# ----------------------------------------------------------------
# Admin
# ----------------------------------------------------------------
ADMIN_EMAIL=admin@careerai.com          # Default admin email
ADMIN_DEFAULT_PASSWORD=                 # Default admin password

