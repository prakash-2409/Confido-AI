# ================================================================
# CareerAI SaaS - Docker / Cloud Environment Variables
# ================================================================
# Copy this file to .env and fill in the values.
# For cloud deployment (Railway/Render/Fly.io), set these as
# environment variables in your cloud platform's dashboard.
# ================================================================

# ----------------------------------------------------------------
# Server
# ----------------------------------------------------------------
NODE_ENV=production

# ----------------------------------------------------------------
# JWT Secrets  (CHANGE THESE â€” use 32+ random characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# ----------------------------------------------------------------
JWT_ACCESS_SECRET=your-super-secret-access-key-min-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters-long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ----------------------------------------------------------------
# MongoDB
# For cloud: use MongoDB Atlas connection string
#   mongodb+srv://<user>:<pass>@cluster.mongodb.net/career-ai-saas
# For self-hosted Docker with auth (production):
# ----------------------------------------------------------------
MONGODB_URI=mongodb://mongodb:27017/career-ai-saas
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure-password-here

# ----------------------------------------------------------------
# CORS  (comma-separated list of allowed frontend origins)
# ----------------------------------------------------------------
CORS_ORIGIN=http://localhost:3000

# ----------------------------------------------------------------
# Frontend public URL  (the URL users open in their browser)
# ----------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1

# ----------------------------------------------------------------
# Frontend URL  (used in backend for email links)
# ----------------------------------------------------------------
FRONTEND_URL=http://localhost:3000

# ----------------------------------------------------------------
# ML Service  (internal service URL)
# ----------------------------------------------------------------
ML_SERVICE_URL=http://ml-service:8000

# ----------------------------------------------------------------
# Email  (choose one provider)
# ----------------------------------------------------------------
EMAIL_PROVIDER=smtp           # smtp | sendgrid | ses
EMAIL_FROM_ADDRESS=noreply@careerai.com
EMAIL_FROM_NAME=CareerAI

# SMTP (works with Mailtrap for dev, any SMTP host for prod)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# SendGrid (set EMAIL_PROVIDER=sendgrid)
# SENDGRID_API_KEY=SG.xxxxx

# ----------------------------------------------------------------
# Stripe Payments
# ----------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
STRIPE_PRO_PRICE_ID=price_xxxxx
STRIPE_ENTERPRISE_PRICE_ID=price_xxxxx

# ----------------------------------------------------------------
# LLM / AI  (choose one)
# ----------------------------------------------------------------
LLM_PROVIDER=openai           # openai | gemini
LLM_MODEL=gpt-4o-mini
OPENAI_API_KEY=sk-xxxxx
# GEMINI_API_KEY=

# ----------------------------------------------------------------
# Admin
# ----------------------------------------------------------------
ADMIN_EMAIL=admin@careerai.com
ADMIN_DEFAULT_PASSWORD=change-me-in-production

# ----------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------------------------------------------------------
# File Upload
# ----------------------------------------------------------------
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
